  <div class="container">
    <div class="col s12 m6">
      <div class="card white">
        <div class="card-content black-text">
        <P><%= simple_format(article.text) %></P>
        </div>
        <div class="card-action">
          <%=link_to "編集", "/blogs/#{article.id}/edit", method: :get, class: "btn blue accent-3" %>
          <%=link_to "削除", "/blogs/#{article.id}", method: :delete, class: "btn blue accent-3 delete"  %>
          <span class="name">更新日時：<%= article.updated_at.to_formatted_s(:date) %>&emsp;&emsp;&emsp;投稿者：<%=article.user.nickname%></span>
        </div>
      </div>
    </div>
  </div>
